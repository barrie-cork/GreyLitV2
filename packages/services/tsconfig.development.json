{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": [
    "./*/src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "references": [
    { "path": "../shared/types" },
    { "path": "../shared/utils" }
  ]
}
