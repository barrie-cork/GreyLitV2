{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "composite": true,
    "declaration": true,
    "rootDir": "..",
    "inlineSourceMap": true,
    "inlineSources": true,
    "preserveWatchOutput": true
  },
  "include": [
    "./*/src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "references": [
    { "path": "../shared/types" },
    { "path": "../shared/utils" }
  ]
}
