{
  "name": "grey-lit-search",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/shared/*",
    "packages/services/*",
    "packages/config/*"
  ],
  "scripts": {
    "build:shared": "tsc --build packages/shared/types && tsc --build packages/shared/utils",
    "build": "yarn clean && yarn build:shared && tsc --build packages/services/tsconfig.production.json",
    "build:dev": "yarn clean && yarn build:shared && tsc --build packages/services/tsconfig.development.json",
    "test": "jest",
    "clean": "yarn workspaces run clean",
    "dev": "yarn workspaces run dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": "18.17.1",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.19",
  "volta": {
    "node": "18.17.1",
    "yarn": "1.22.19"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.7",
    "ts-jest": "^29.2.5",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
