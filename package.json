{
  "name": "grey-lit-search",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/shared/*",
    "packages/services/*",
    "packages/config/*"
  ],
  "scripts": {
    "build": "yarn workspace @grey-lit/types build && yarn workspace @grey-lit/utils build && tsc -p packages/services/tsconfig.production.json",
    "build:dev": "yarn workspace @grey-lit/types build && yarn workspace @grey-lit/utils build && tsc -p packages/services/tsconfig.development.json",
    "test": "yarn workspaces run test",
    "clean": "yarn workspaces run clean",
    "dev": "yarn workspaces run dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "engines": {
    "node": "18.17.1",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "typescript": "5.0.4",
    "@types/node": "^18.17.1"
  }
}
