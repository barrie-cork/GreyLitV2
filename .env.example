# Application
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=v1

# Service Ports
AUTH_SERVICE_PORT=3000
DASHBOARD_SERVICE_PORT=3001
SEARCH_CONFIG_SERVICE_PORT=3002
DOCUMENT_PROCESSOR_SERVICE_PORT=3003
SEARCH_STRATEGY_SERVICE_PORT=3004
SEARCH_EXECUTOR_SERVICE_PORT=3005
RESULT_PROCESSOR_SERVICE_PORT=3006
REPORT_GENERATOR_SERVICE_PORT=3007
WEB_CRAWLER_SERVICE_PORT=3008

# Service URLs
AUTH_SERVICE_URL=http://auth:3000
DASHBOARD_SERVICE_URL=http://dashboard:3001
SEARCH_CONFIG_SERVICE_URL=http://search-config:3002
DOCUMENT_PROCESSOR_URL=http://document-processor:3003
SEARCH_STRATEGY_URL=http://search-strategy:3004
SEARCH_EXECUTOR_URL=http://search-executor:3005
RESULT_PROCESSOR_URL=http://result-processor:3006
REPORT_GENERATOR_URL=http://report-generator:3007
WEB_CRAWLER_URL=http://web-crawler:3008

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/grey-lit
MONGODB_USER=grey-lit
MONGODB_PASSWORD=your-mongodb-password

NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

REDIS_URI=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# API Keys
SERP_API_KEY=your-serp-api-key
SERPER_API_KEY=your-serper-api-key
DUCKDUCKGO_API_KEY=your-duckduckgo-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=1h
COOKIE_SECRET=your-cookie-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
